{% assign collection_title = 'incontinence' %}
{%- assign collection = collections[collection_title] -%}

{% liquid
  if page.title contains 'Men'
    assign reviews = collection.metafields.reviews.men
  else
    assign reviews = collection.metafields.reviews.women
  endif

  assign grid_width_large = 'large-up--one-quarter'
  assign grid_width_medium = 'medium--one-half'
  assign grid_width_small = 'small--one-half'
%}

<div
  class="index-collection carousel-content index-collection--{{ collection.products_count }} {{ section.settings.homepage_collection_color }}"
  data-section-id="{{ section.id }}"
  data-section-type="index-collection">
  <div class="wrapper">
    <div class="index-collection__background"></div>
    <div class="index-collection__foreground">
      <div class="grid" data-index-collection-slideshow>
        {% for review in reviews %}
          {% include 'incontinence-review-grid-item' %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>