<!-- snippets/one-time-subscribe-buttons.liquid -->
<span class="add-to-cart-btn-wrapper {% if disabled %}disabled-btn-wrapper{% endif %}">
  <form action="/cart/add" method="post">
    <input
      type="submit"
      class="add-to-cart-btn"
      value="{{buttonText}}" />
    <input
      type="hidden"
      name="return_to"
      value="/cart" />
  </form>
</span>
<div class="d-flex justify-content-center">
  <a class="secure">
    <i class="fa fa-lock" aria-hidden="true"></i>Secure Transaction</a>
</div>

<div class="d-flex justify-content-left content-visitor hide-medium">
  <i class="fa fa-eye" style="color: #000;"></i>
  <h5></h5>
</div>