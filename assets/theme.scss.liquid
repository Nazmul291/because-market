.decoration-modern .index__collection__title,
.decoration-modern .index__collection__description{
  @include media-query($large-down) {
    padding-right: 10%;
  }
}

/*================ Decoration ================*/

.decoration-modern{
  .title-decoration{
    height: 28px;
    margin-top: 30px;
    .container-layout &:after{
      width: 20%;
    }
    &:after{
      content: '';
      height: 50px;
      background: $color-body-light;
      right: 80%;
      position: absolute;
      overflow: hidden;
      z-index: 0;
      opacity: 0.5;
      width: 100%;
    }
  }
  .adjust--white .title-decoration{
    margin-top: 0;
  }
  .index--gray .title-decoration:after{
    background-color: #fff;
    opacity: 1;
  }
  .title--decorated{
    position: relative;
    z-index: 100;

    &.dark {
      color: #555862;
    }

  }
  .footer .title-decoration,
  .index-rte .title-decoration,
  .index-page .title-decoration,
  &.template-page .grid__item .title-decoration{
    margin-top: 0;
  }
}
html:not(.container-layout) .decoration-modern .title-decoration:after{
  @include media-query($widescreen) {
    right: 60%;
  }
  @include media-query($small) {
    right: 60%;
  }
}
.container-layout .decoration-modern .title-decoration:after{
  @include media-query($small) {
    right: 60%;
    width: 40%;
  }
}

