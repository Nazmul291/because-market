.product__thumbs{
  .slick-dots {
    list-style: none;
    display: flex;
    align-items: center;
    padding: 0;
    margin: 0;
    @media (min-width: $pdp-new-breakpoint) {
      flex-direction: column;
      justify-content: start; //first item in scroller is the default picture
      li {
        margin: 5px 0 5px 0;
      }
    }
    @media (max-width: $pdp-new-breakpoint) {
      flex-direction: row;
      justify-content: center;
      margin-top: 10px;
      li {
        margin: 0 5px 0 5px;
      }
    }
    li {
      position: relative;
      padding: 0;
      cursor: pointer;

      &.slick-active {
        &::after {
          content: '';
          position: absolute;
          bottom: 0;
          left: 0;
          width: 100%;
          height: 100%;
          border: 2px solid $color-text-bright;
          border-radius: 4px;
          opacity: 0.5;
          pointer-events: none;
        }
      }

      a {
        display: block;
        max-width: 80px;
        max-height: 100%; //preserve aspect ratio while observing max-width
        @include media-query ($small) {
          max-width: 70px;
          max-height: 100% ;
        }
      }

      img {
        border-radius: $radius;
        height: inherit;
        width: inherit;
        display: block;
      }
    }

    .icon {
      position: absolute;
      top: 4px;
      right: 4px;
      margin: 0;
      height: 20px;
      width: 20px;
      color: transparent;
      fill: $color-body;
      vertical-align: baseline;

      path {
        fill: inherit;
        stroke: inherit;

        &.icon-media-model-outline,
        &.icon-media-video-outline {
          stroke: rgba($color-text, 0.05);
        }

        &.icon-media-model-element,
        &.icon-media-video-element {
          fill: $color-text;
        }
      }
    }
  }
}

.homepage-slideshow{
  @include media-query($small) {
    height: 85vh!important;
  }

  .hero__button.slider-action {
    margin-bottom: 25px;
  }

  .background-size-cover--slide {
    width: 50vw;
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center center;
  }

  .slick-dots {
    list-style: none;
    align-self: flex-start;
    text-align: left;
    padding: 0;
    position: absolute!important;
    bottom: 10px !important;


    @include media-query($small) {
      margin-left: 15px;
    }

    @include media-query($medium-up) {
      margin-left: calc(1vw + 15px);
    }

    li {
      position: relative;
      display: inline-block;
      height: 20px;
      width: 20px;
      margin: 0 30px 0 0;
      border-radius: 4px;
      padding: 0;
      cursor: pointer;
      @include media-query($small){
        margin: 0 15px 0 0;
      }
    }
  }

  .hero__title {
    font-size: 1.5 * 2.875rem;

    @include media-query($small) {
      font-size: 2.5rem;
    }

    @media only screen and (max-width: 355px) {
      font-size: 2rem;
    }


  }

  .hero__description.h4--body {
    font-size: 1.5rem;

    @include media-query($small) {
      font-size: 20px;
    }
  }
}

